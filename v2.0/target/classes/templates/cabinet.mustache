{{> commons/header}}
<div class="cabinet">
    <div class="account">
        <p class="account-value">Balance: <span class="bold" id="cab_acc">${{user.account}}</span></p>
        <button class="account-btn" onclick="location.href = '/replenish'">Replenish</button>
    </div>
    <h3 class="welcm">Welcome, <span class="user-name" id="cab_user">{{user.username}}</span></h3>
    <div style="display: flex">
        <div class="info-bl">
            <h3 class="bl-ttl">My info</h3>
            <div class="bl-info">
                <p>Username: <span class="bold">{{user.username}}</span></p>
                <p>Phone: <span class="bold" id="cab_phone">{{user.phone}}</span></p>
                <p>Address: <span class="bold">{{user.address}}</span></p>
                <p>Email: <span class="bold">{{user.email}}</span></p>
            </div>
        </div>
        <div class="info-bl">
            <h3 class="bl-ttl">My tickets</h3>
            <div class="bl-tickets">
                {{#user.tickets}}
                    <div class="sm-ticket">
                        <div class="ticket-cont sm-ticket-cont">
                            Flight <span class="bold">#{{seat.flight.id}}</span>
                        </div>
                        <div class="ticket-cont sm-ticket-cont">
                            Direction: <span class="bold">{{seat.flight.direction}}</span>
                        </div>
                        <div class="ticket-cont sm-ticket-cont">
                            Departure date: <span class="bold">{{seat.flight.departureTime}}</span>
                        </div>
                        <div class="ticket-cont sm-ticket-cont">
                            Flight time: <span class="bold">{{seat.flight.flightTime}}</span>
                        </div>
                        <div class="ticket-cont sm-ticket-cont">
                            Seat number: <span class="bold">{{seat.number}}</span>
                        </div>
                        <div class="ticket-cont sm-ticket-cont">
                            Baggage:
                            {{#baggage}}
                                <span class="bold">Available</span>
                            {{/baggage}}
                            {{^baggage}}
                                <span class="bold">Not available</span>
                            {{/baggage}}
                        </div>
                        <div class="ticket-cont sm-ticket-cont">
                            Priority check-in and boarding:
                            {{#priority}}
                                <span class="bold">Available</span>
                            {{/priority}}
                            {{^priority}}
                                <span class="bold">Not available</span>
                            {{/priority}}
                        </div>
                        <div class="line">

                        </div>
                        <div class="ticket-price sm-ticket-price">
                            Price: <span class="bold">${{price}}</span>
                        </div>
                    </div>
                {{/user.tickets}}
            </div>
        </div>
    </div>
</div>

{{> commons/footer}}